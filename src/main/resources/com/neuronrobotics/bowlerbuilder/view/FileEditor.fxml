<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.web.WebView?>

<SplitPane id="fileEditorRoot" fx:id="root" dividerPositions="0.8" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.neuronrobotics.bowlerbuilder.controller.FileEditorController">
   <items>
      <BorderPane>
         <center>
             <WebView id="webView" fx:id="webView" minHeight="-1.0" minWidth="-1.0" prefHeight="200.0" prefWidth="-1.0" />
         </center>
         <bottom>
            <HBox alignment="CENTER_LEFT" maxHeight="30.0" nodeOrientation="LEFT_TO_RIGHT" spacing="15.0" BorderPane.alignment="CENTER">
               <children>
                <Button id="runButton" fx:id="runButton" mnemonicParsing="false" onAction="#runFile" text="Run" />
                  <Button id="publishButton" fx:id="publishButton" mnemonicParsing="false" onAction="#publishFile" text="Publish" />
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="File:" />
                        <TextField id="fileNameField" fx:id="fileNameField" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Gist:" />
                        <TextField id="gistNameField" fx:id="gistNameField" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets left="5.0" />
               </padding>
            </HBox>
         </bottom>
         <top>
         </top>
      </BorderPane>
      <fx:include fx:id="cadviewer" source="CADModelViewer.fxml" />
   </items>
</SplitPane>
