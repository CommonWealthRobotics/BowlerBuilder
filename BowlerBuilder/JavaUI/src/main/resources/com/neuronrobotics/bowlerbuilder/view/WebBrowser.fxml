<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.ChoiceBox?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.neuronrobotics.bowlerbuilder.controller.WebBrowserController">
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="35.0" spacing="5.0">
                    <children>
                        <Button fx:id="backPageButton" mnemonicParsing="false" onAction="#onBackPage"/>
                        <Button fx:id="nextPageButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
                                onAction="#onNextPage"/>
                        <Button fx:id="reloadPageButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
                                onAction="#onReloadPage"/>
                        <Button fx:id="homePageButton" layoutX="114.0" layoutY="10.0" mnemonicParsing="false"
                                onAction="#onHomePage"/>
                        <TextField fx:id="urlField" onAction="#onNavigate" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets right="5.0"/>
                            </HBox.margin>
                        </TextField>
                    </children>
                    <padding>
                        <Insets left="5.0"/>
                    </padding>
                </HBox>
                <WebView fx:id="webView" minHeight="-1.0" minWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0"
                         VBox.vgrow="ALWAYS"/>
                <HBox alignment="CENTER_LEFT" prefHeight="35.0" spacing="5.0">
                    <padding>
                        <Insets top="5.0" right="5.0" bottom="5.0" left="5.0"/>
                    </padding>
                    <Button fx:id="runButton" onAction="#onRun"/>
                    <ImageView fx:id="runIcon"/>
                    <Button fx:id="modifyButton" onAction="#onModify"/>
                    <ChoiceBox fx:id="fileBox"/>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
